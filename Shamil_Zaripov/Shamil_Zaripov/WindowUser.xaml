<Window x:Class="Shamil_Zaripov.WindowUser"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shamil_Zaripov"
        mc:Ignorable="d"
        Title="WindowUser" Height="450" Width="800">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="0.1*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.2*"></RowDefinition>
            <RowDefinition Height="0.1*"></RowDefinition>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
            <ColumnDefinition Width="0.5*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Label x:Name="userName" Content="{Binding SurName}" HorizontalAlignment="Center" VerticalAlignment="Top" FontSize="20" Height="41"  Width="245" Grid.ColumnSpan="2" Margin="273,19,274,0" />
        <Button x:Name="ProductButton" Background="Lavender" Grid.Row="1" Grid.Column="0" Width="200" Height="50" Content="Товары" FontSize="18" FontFamily="Times New Roman" Click="ProductButton_Click"></Button>
    </Grid>
</Window>
